function productList_onload(obj:Form, e:LoadEventInfo)
{
	 product.url = "DataURL::productListX.do?"
 				   + "pageNum="+pageNum+"&"
	 			   + "startNum="+startNum+"&"
				   + "contentPerPage="+contentPerPage+"&"
				   + "Keyword="+Keyword+"&"
				   + "Keyfield="+Keyfield;
    
product.load();
}

