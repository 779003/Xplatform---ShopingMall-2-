function product_onload(obj:Dataset, e:DSLoadEventInfo)
{
	rowCnt = product.getColumn(0,"TOTCNT"); //총 게시글 수
	   var test = rowCnt / contentPerPage;  
 totPage = Math.ceil(test);	   //총 페이지 수
	
pageCount.value = pageNum+"/"+totPage;
}


